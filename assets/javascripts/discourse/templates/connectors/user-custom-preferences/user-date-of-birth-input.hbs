{{#if siteSettings.cakeday_birthday_enabled}}
  <label class="control-label">{{i18n 'user.date_of_birth.title'}}</label>
  <div class="controls">
    {{view "select" content=months
        optionValuePath="content.value"
        value=userBirthdayMonth
        optionLabelPath="content.label"}}

    {{view "select" content=days value=userBirthdayDay}}
  </div>
{{/if}}
